<div class="col-lg-12">
    <% @users.each do |user| %>
        <div class="card mb-3">
            <div class="row g-0">
            <div class="col-md-2">
                <%= image_tag user.photo, class:'img-fluid rounded-start'%>
                <!-- <img src="https://cdn.pixabay.com/photo/2019/08/19/20/18/artificial-intelligence-4417279_1280.jpg" class="img-fluid rounded-start" alt="..."> -->
            </div>
            <div class="col-md-10">
                <div class="card-body">
                <!-- <h1 class="card-title"><%= user.name %></h1> -->
                <h1 class="card-title"><%= link_to user.name, user_path(user), class: "custom-link" %></h1>
                <p class="card-text text-end">Number of Posts: <%= user.posts_counter %></p>
                
                </div>
            </div>
            </div>
        </div>
    <% end %>
</div>
