<% if user.present? %>
<div class="card mb-3">
    <div class="row g-0">
        <div class="col-md-2">
            <%= image_tag "#{user.photo}", class:'img-fluid rounded-start'%>
        </div>
        <div class="col-md-10">
            <div class="card-body">
            <h1 class="card-title"><%= link_to user.name, user_path(user), class: "user-link" %></h1>
            <p class="card-text text-end">Number of Posts: <%= user.posts_counter %></p>
            </div>
        </div>
    </div>
</div>
<% else %>
    <h1>user is Not present</h1>
<% end %>