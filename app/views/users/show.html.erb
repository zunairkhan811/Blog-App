<div class="col-lg-12">
    <%= render 'shared/show_user', user: @user %>
    <div class="mb-2 mt-2">
            <% if current_user == @user && can?(:create, Post) %>
                <!-- <% Rails.logger.debug "Current User Role: #{current_user.role}" %> -->
                <%= link_to "Create New Post(User)", new_user_post_path(current_user.id), class: 'btn btn-primary' %>
            <% elsif current_user.admin? %>
              <%= link_to "Create New Post(Admin)", new_user_post_path(current_user.id), class: 'btn btn-primary' %>
            <% end %>
    </div>
    <div class="card mb-3">
        <h5 class="card-header">Bio</h5>
        <div class="card-body">
          <p class="card-text"><%= @user.bio %></p>
        </div>
    </div>
    <% if @user.posts.empty?  %>
    <div class="card">
        <div class="card-body">
            <h4 class="card-text">No Post Available for this User</h4>
        </div> 
    </div>
    <% else %>
    <div id="recent-posts-container">
        <% @user.recent_posts.each do |post| %>
            <%= render 'shared/post', post: post %> 
        <% end %>
    </div>
    <div class="text-center mb-5 mt-2">
        <%= link_to "See All Posts", user_posts_path(@user), class: 'btn btn-primary mt-2' %>
    </div>
    <% end %>
    
</div>
